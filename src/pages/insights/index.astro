---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import TagPill from '../../components/TagPill.astro';

const insights = await getCollection('insights', ({ data }) => !data.draft);
const sortedInsights = insights.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Format date helper
const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<BaseLayout
  title="Insights"
  description="Thinking out loud about AI, data, and the systems that shape work."
>
  <HeroSection
    title="Insights"
    subtitle="Thinking out loud about AI, data, and the systems that shape work."
    accent="#5b8fb9"
  />

  <!-- Insights List -->
  <section class="w-full py-16 md:py-24 px-6 bg-bg-primary">
    <div class="max-w-3xl mx-auto">
      {sortedInsights.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-text-secondary font-body text-lg">
            Articles coming soon. Stay tuned.
          </p>
        </div>
      ) : (
        <div class="space-y-8">
          {sortedInsights.map((entry) => {
            const isFeatured = entry.data.featured;
            return (
              <article
                class={`pb-8 border-b border-border transition-all hover:border-accent-professional/50 ${
                  isFeatured ? 'pl-6 border-l-4' : ''
                }`}
                style={isFeatured ? { borderLeftColor: '#5b8fb9' } : {}}
              >
                <!-- Featured Badge -->
                {isFeatured && (
                  <div class="mb-3">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-heading font-bold uppercase tracking-wide bg-accent-professional/10 text-accent-professional">
                      Featured
                    </span>
                  </div>
                )}

                <!-- Title -->
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-text-primary mb-3 leading-snug">
                  <a
                    href={`/insights/${entry.id}`}
                    class="hover:text-accent-professional transition-colors"
                  >
                    {entry.data.title}
                  </a>
                </h2>

                <!-- Meta Line: Date · Reading Time -->
                <div class="flex items-center gap-4 text-sm text-text-secondary font-body mb-4">
                  <span>{formatDate(entry.data.date)}</span>
                  <span>·</span>
                  <span>{entry.data.readingTime} min read</span>
                </div>

                <!-- Excerpt -->
                <p class="text-base text-text-secondary font-body leading-relaxed mb-4">
                  {entry.data.excerpt}
                </p>

                <!-- Tags -->
                {entry.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {entry.data.tags.slice(0, 3).map((tag) => (
                      <TagPill tag={tag} accent="#5b8fb9" />
                    ))}
                  </div>
                )}
              </article>
            );
          })}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
