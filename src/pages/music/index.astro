---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import TrackCard from '../../components/TrackCard.astro';

// Get all music tracks
const allMusic = await getCollection('music');

// Group by album
const albumMap = new Map<string, typeof allMusic>();
for (const track of allMusic) {
  const album = track.data.album || 'Singles';
  if (!albumMap.has(album)) albumMap.set(album, []);
  albumMap.get(album)!.push(track);
}

// Sort albums: named albums by newest track date, Singles last
const albumEntries = [...albumMap.entries()].sort((a, b) => {
  if (a[0] === 'Singles') return 1;
  if (b[0] === 'Singles') return -1;
  const aDate = Math.max(...a[1].map(t => new Date(t.data.date).getTime()));
  const bDate = Math.max(...b[1].map(t => new Date(t.data.date).getTime()));
  return bDate - aDate;
});

const description = "Audiotelic — a multidisciplinary music project where the making is the point. AI-human collaboration across genres, from concept albums to creative experiments.";
---

<BaseLayout title="Music" description={description}>
  <!-- Hero Section -->
  <HeroSection
    title="Music"
    subtitle="The making is the point."
    accent="var(--color-accent-music)"
  />

  <!-- Audiotelic Intro -->
  <section class="py-16 md:py-20 px-6 bg-bg-primary">
    <div class="max-w-3xl mx-auto">
      <div class="flex items-center gap-4 mb-8">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary">
          Audiotelic
        </h2>
        <a
          href="https://open.spotify.com/artist/5J5r2rrSFjWkb4ZPs77WK0"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#1DB954]/10 hover:bg-[#1DB954]/20 text-[#1DB954] text-sm font-heading font-bold uppercase tracking-wide transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
          <span>Spotify</span>
        </a>
      </div>

      <p class="text-lg text-text-secondary font-body leading-relaxed mb-4">
        Audiotelic is a multidisciplinary music project built on a simple premise: <em>the making is the point</em>. The name blends <em>audio</em> with <em>autotelic</em> — the psychological concept of doing something for the intrinsic reward of doing it.
      </p>
      <p class="text-lg text-text-secondary font-body leading-relaxed">
        The process: write lyrics collaboratively with AI, generate music through Suno, shape and refine, release through DistroKid, repeat. Every song is a data point. Every album is a build. The human brings the taste, the humor, and the emotional instinct. The AI brings speed, range, and an utter lack of self-consciousness about genre boundaries.
      </p>
    </div>
  </section>

  <!-- Featured Tracks with Suno Embeds -->
  <section class="py-12 md:py-16 px-6 bg-bg-surface/50">
    <div class="max-w-4xl mx-auto">
      <div class="flex items-center gap-3 mb-8">
        <div class="w-8 h-1 bg-accent-music rounded-full"></div>
        <h2 class="text-2xl md:text-3xl font-heading font-bold text-text-primary">
          Featured Tracks
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Training My Replacement -->
        <div class="space-y-3">
          <h3 class="text-lg font-heading font-bold text-text-primary">Training My Replacement</h3>
          <p class="text-sm text-text-secondary font-body">An AI-consciousness narrative about obsolescence, told with a wink.</p>
          <div class="rounded-lg overflow-hidden border border-border">
            <iframe
              src="https://suno.com/embed/b3707cb6-5df4-49f0-b376-a646a38e2715"
              width="100%"
              height="150"
              style="border: none; border-radius: 8px;"
              allow="autoplay"
              loading="lazy"
            ></iframe>
          </div>
        </div>

        <!-- Runaround Who -->
        <div class="space-y-3">
          <h3 class="text-lg font-heading font-bold text-text-primary">Runaround Who</h3>
          <p class="text-sm text-text-secondary font-body">A rockabilly romp that proves AI-human collaboration can make you grin.</p>
          <div class="rounded-lg overflow-hidden border border-border">
            <iframe
              src="https://suno.com/embed/1fdf3927-9640-4f86-90dd-893281f432a6"
              width="100%"
              height="150"
              style="border: none; border-radius: 8px;"
              allow="autoplay"
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Albums & Tracks -->
  {albumEntries.map(([albumName, tracks]) => {
    const sortedTracks = tracks.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

    return (
      <section class="py-12 md:py-16 px-6 bg-bg-elevated odd:bg-bg-primary">
        <div class="max-w-7xl mx-auto">
          <div class="flex items-center gap-3 mb-8">
            <div class="w-8 h-1 bg-accent-music rounded-full"></div>
            <h2 class="text-2xl md:text-3xl font-heading font-bold text-text-primary">
              {albumName}
            </h2>
            <span class="text-sm text-text-muted font-body">
              {tracks.length} {tracks.length === 1 ? 'track' : 'tracks'}
            </span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedTracks.map(track => (
              <TrackCard
                title={track.data.title}
                artist="audiotelic"
                genre={track.data.genre}
                mood={track.data.mood}
                date={track.data.date}
                cover={track.data.cover}
                sunoUrl={track.data.sunoUrl}
                duration={track.data.duration}
                slug={track.id}
              />
            ))}
          </div>
        </div>
      </section>
    );
  })}
</BaseLayout>
