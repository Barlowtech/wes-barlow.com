---
// Header.astro - Site navigation header
// Dark, semi-transparent, sticky top with logo and nav links
// Mobile-responsive with CSS-based hamburger menu

const navLinks = [
  { label: 'Music', href: '/music' },
  { label: 'Audio', href: '/audio' },
  { label: 'Insights', href: '/insights' },
  { label: 'About', href: '/about' }
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-bg-primary/80 backdrop-blur-sm border-b border-border transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/"
      class="text-lg font-heading font-bold text-text-primary tracking-tight hover:text-accent-creative transition-colors"
    >
      WB
    </a>

    <!-- Mobile Menu Toggle -->
    <button
      id="mobile-menu-toggle"
      class="md:hidden w-8 h-8 flex flex-col items-center justify-center gap-1.5 cursor-pointer"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <span class="w-6 h-0.5 bg-text-primary block transition-all duration-300" id="hamburger-1"></span>
      <span class="w-6 h-0.5 bg-text-primary block transition-all duration-300" id="hamburger-2"></span>
      <span class="w-6 h-0.5 bg-text-primary block transition-all duration-300" id="hamburger-3"></span>
    </button>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-12">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-sm font-body text-text-secondary hover:text-accent-creative transition-colors duration-200"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="absolute top-full left-0 right-0 bg-bg-surface/95 backdrop-blur-sm border-b border-border hidden md:hidden flex-col"
    >
      <ul class="flex flex-col p-6 gap-6">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm font-body text-text-secondary hover:text-accent-creative transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const hamburgers = [
    document.getElementById('hamburger-1'),
    document.getElementById('hamburger-2'),
    document.getElementById('hamburger-3')
  ];

  if (toggle && menu) {
    toggle.addEventListener('click', () => {
      const isOpen = menu.classList.contains('hidden');

      if (isOpen) {
        menu.classList.remove('hidden');
        menu.classList.add('flex');
        toggle.setAttribute('aria-expanded', 'true');

        // Animate hamburger to X
        hamburgers[0].style.transform = 'translateY(10px) rotate(45deg)';
        hamburgers[1].style.opacity = '0';
        hamburgers[2].style.transform = 'translateY(-10px) rotate(-45deg)';
      } else {
        menu.classList.add('hidden');
        menu.classList.remove('flex');
        toggle.setAttribute('aria-expanded', 'false');

        // Reset hamburger
        hamburgers[0].style.transform = '';
        hamburgers[1].style.opacity = '1';
        hamburgers[2].style.transform = '';
      }
    });

    // Close menu when a link is clicked
    const menuLinks = menu.querySelectorAll('a');
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        menu.classList.remove('flex');
        toggle.setAttribute('aria-expanded', 'false');
        hamburgers[0].style.transform = '';
        hamburgers[1].style.opacity = '1';
        hamburgers[2].style.transform = '';
      });
    });
  }
</script>

<style>
  /* Add top padding to page to account for fixed header */
  :global(body) {
    padding-top: 0;
  }
</style>
